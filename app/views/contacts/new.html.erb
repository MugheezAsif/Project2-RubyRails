<section class="same-heading">
    <div class="container my-5">
        <h2>Contact Us</h2>
        <%= form_for @contact do |f| %>
            <div class="col-md-6">
            <%= f.label :name %>
            <br>
            <%= f.text_field  :name, required: true, class: "form-control", maxlength: '18' %>
            <br>

            <%= f.label :email %>
            <br>
            <%= f.text_field :email, required: true, class: "form-control", maxlength: '25' %>
            <br>

            <%= f.label :message %>
            <br>
            <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "form-control", placeholder: "Send me a message"%>
            <br>

            <%= f.submit 'Send Message', class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
</section>