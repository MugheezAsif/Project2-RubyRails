

<section class="same-heading">
  <div class="container my-5">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <p class="text-center">If you dont want to change something leave it blank</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="field form-group my-2">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control my-2", maxlength: '12' %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" , maxlength: '18'%>
      </div>

      <div class="field form-group my-2">
        <%= f.label :avatar %><br />
        <%= f.file_field :avatar, class: "form-control-file" %>
      </div>

      <div class="field form-group my-2">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field form-group my-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field form-group my-2">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions form-group my-2">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
  </div>
</section>