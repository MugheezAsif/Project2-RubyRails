
<section>
  <div class="container p-3">
    <div class="same-heading my-5">
      <h2>Sign up</h2>

      <div class="w-50">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field form-group my-2">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control my-2" %>
          </div>

          <div class="field form-group my-2">
            <%= f.label :user_type %><br />
            <%= f.select :user_type, options_for_select([["Select One", ""], "Admin", "Buyer"]), class: 'form-control my-2' %>
          </div>
          
          <div class="field form-group my-2">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-2" %>
          </div>

          <div class="field form-group my-2">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control my-2" %>
          </div>

          <div class="field form-group my-2">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control my-2" %>
          </div>

          <div class="field form-group my-2">
            <%= f.label :avatar %><br />
            <%= f.file_field :avatar, class: "form-control-file" %>
          </div>

          <div class="actions form-group my-2">
            <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>